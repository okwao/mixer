<?xml version="1.0" encoding="utf-8"?>
<!-- Adapter creates the views using the format in this layout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/brandyimageView1"
        android:layout_gravity="start"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/brandytextView1"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:textSize="15sp"
        android:text="TextView"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp" />
    <TextView
        android:id="@+id/brandytextView2"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:textSize="15sp"
        android:text=""
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/brandyimageView1"
        android:layout_toEndOf="@+id/brandyimageView1" />

</RelativeLayout>